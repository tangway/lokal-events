

<form action="/events/<%= events.id %>?_method=PUT" method="POST">
  <div class="form-group">
    <input type="hidden" name="eventID" value="<%= events.id %>">
    <label for="title">Title: </label>
    <br>
    <input id="title" class="form-control" name="title" value="<%= events.title %>">
  </div>

  <div class="form-group">
    <label for="date">Date: </label>
    <br>
    <input id="date" class="form-control" name="date" value="<%= events.date %>">
  </div>

  <div class="form-group">
    <label for="venue">Venue: </label>
    <br>
    <input id="venue" class="form-control" name="venue" value="<%= events.venue %>">
  </div>

  <div class="form-group">
    <label for="Time">Time: </label>
    <br>
    <input id="Time" class="form-control" name="Time" value="<%= events.time %>">
  </div>

  <div class="form-group">
    <label for="type">Type: </label>
    <br>
    <input id="type" class="form-control" name="type" value="<%= events.type %>">
  </div>

  <div class="form-group">
    <label for="description">Description: </label>
    <br>
    <textarea rows="8" cols="22" name="description" ><%= events.description %></textarea>
    <!-- <input id="description" class="form-control" name="description"> -->
  </div>

  <div class="form-group">
    <label for="imageurl">Image URL: </label>
    <br>
    <input id="imageurl" class="form-control" name="imageurl" value="<%= events.imageurl %>">
  </div>

  <input class="btn btn-primary" type="submit" name="action">
  <button type="submit" name="delete" formaction="/events/<%= events.id %>?_method=DELETE" formmethod="post">Delete ahh</button>
</form>
