

<form action="/newEvent" method="POST">
  <div class="form-group">
    <input type="hidden" name="email" value="<%= currentUser.email %>">
    <label for="title">Title: </label>
    <br>
    <input id="title" class="form-control" name="title">
  </div>

  <div class="form-group">
    <label for="date">Date: </label>
    <br>
    <input id="date" class="form-control" name="date">
  </div>

  <div class="form-group">
    <label for="venue">Venue: </label>
    <br>
    <input id="venue" class="form-control" name="venue">
  </div>

  <div class="form-group">
    <label for="Time">Time: </label>
    <br>
    <input id="Time" class="form-control" name="Time">
  </div>

  <div class="form-group">
    <label for="type">Type: </label>
    <br>
    <input id="type" class="form-control" name="type">.
  </div>

  <div class="form-group">
    <label for="description">Description: </label>
    <br>
    <textarea rows="8" cols="22" name="description" >Enter description here </textarea>
    <!-- <input id="description" class="form-control" name="description"> -->
  </div>

  <div class="form-group">
    <label for="imageurl">Image URL: </label>
    <br>
    <input id="imageurl" class="form-control" name="imageurl">
  </div>



  <input class="btn btn-primary" type="submit">
</form>
